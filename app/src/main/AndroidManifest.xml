<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sam.app.walkies">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.walkiesLocation">


        <activity
            android:name=".activities.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Register"
            android:exported="false" />
        <activity
            android:name=".activities.Login"
            android:exported="true">

        </activity>
        <activity
            android:name=".activities.WalkiesMapsActivity"
            android:exported="false"
            android:label="@string/title_activity_walkies_maps"
            android:theme="@style/Theme.walkiesLocation.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.MapActivity"
            android:exported="true"
            android:label="@string/title_activity_map" />
        <activity
            android:name=".activities.WalkiesLocationsActivity"
            android:exported="true" />
        <activity android:name=".activities.WalkiesActivity" />
    </application>

</manifest>